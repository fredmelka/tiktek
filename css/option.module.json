{
    "*": "{margin: 0; padding: 0;}",
    "html": "{max-width: var(--max-screen); margin: 0 auto;}",
    "body": "{background-color: var(--main-bg-color); overflow: hidden; touch-action: none; user-select: none; -webkit-user-select: none;}",
    "i": "{color: var(--main-color); font-size: 3rem; text-shadow: 5px 5px 5px gray;}",
    "span": "{font-size: 2.0rem; font-family: 'Poppins', sans-serif; font-weight: 200; color: var(--main-color);}",
    "span:not(.fa-li)": "{padding-left: 4vw; font-weight: bold; color: var(--menu-text-color);}"
}